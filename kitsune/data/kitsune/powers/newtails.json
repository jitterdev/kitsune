{
    "type":"origins:multiple",
    "scoreboard": {
        "type":"origins:action_on_callback",
        "entity_action_chosen": {
            "type":"origins:and",
            "actions": [
                {
                    "type":"origins:execute_command",
                    "command": "scoreboard objectives add MoonCycle dummy"
                },
                {
                    "type":"origins:execute_command",
                    "command": "scoreboard players set @s MoonCycle 8"
                }
            ]
        }
    },
    "save-day": {
        "type":"origins:action_over_time",
        "interval": 20,
        "entity_action": {
            "type":"origins:and",
            "actions": [
                {
                    "type":"origins:execute_command",
                    "command": "execute store result score MoonCycle MoonCycle run time query day"
                },
                {
                    "type":"origins:execute_command",
                    "command": "scoreboard players operation MoonCycle MoonCycle %= @s MoonCycle"
                }
            ]
        }
    },
    "calculate-moon": {
        "type":"origins:action_over_time",
        "interval": 20,
        "entity_action": {
            "type":"origins:execute_command",
            "command": "scoreboard players operation MoonCycle MoonCycle %= @s MoonCycle"
        }
    },
    "takeXP": {
        "type": "origins:action_over_time",
        "interval": 2,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:command",
                "command": "execute if score @s level > @s kitsune.difference",
                "comparison": "==",
                "compare_to": 1
            },
            "if_action": {
                "type": "origins:execute_command",
                "command": "xp add @s -1 levels"
            },
            "else_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "tag @s remove takeXP"
                    },
                    {
                        "type": "origins:execute_command",
                        "command": "function kitsune:tail"
                    }
                ]
            }
        },
        "condition": {
            "type": "origins:nbt",
            "nbt": "{Tags:[takeXP]}"
        }
    },
    "new-moon-condition": {
        "type": "origins:action_over_time",
        "interval": 1200,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "function kitsune:checktail" 
                },
                {
                    "type": "origins:delay",
                    "ticks": 20,
                    "action": {
                        "type": "origins:if_else",
                        "condition": {
                            "type": "origins:and",
                            "conditions": [
                                {
                                    "type": "origins:command",
                                    "command": "execute if score @s kitsune.difference matches 1..",
                                    "comparison": "==",
                                    "compare_to": 1
                                },
                                {
                                    "type": "origins:command",
                                    "command": "execute unless score @s kitsune.lastTailDay = @s day",
                                    "comparison": "==",
                                    "compare_to": 1
                                }
                            ]
                        },
                        "if_action": {
                            "type": "origins:execute_command",
                            "command": "tag @s add takeXP"
                        },
                        "else_action": {
                            "type": "origins:nothing"
                        }
                    }
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:command",
                    "command": "scoreboard players get MoonCycle MoonCycle",
                    "comparison": "==",
                    "compare_to": 4
                },
                {
                    "type": "origins:scoreboard",
                    "objective": "kitsune.tailNum",
                    "comparison": "<",
                    "compare_to": 9
                },
                {
                    "type": "origins:dimension",
                    "dimension": "minecraft:overworld"
                },
                {
                    "type": "origins:time_of_day",
                    "comparison": ">",
                    "compare_to": 13000
                }
            ]
        }
    },
    "name": "Tails",
	"description": "You grow new tails as you age, up to a maximum of 9. You gain new abilities with each tail you gain, but each tail is harder to gain than the last."
}